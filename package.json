    "@types/chai-subset": "^1.3.3",
    "@types/koa": "^2.11.6",
    "@types/mocha": "^8.2.0",
    "@types/pg": "^7.14.7",
    "@types/pino": "^6.3.5",
    "@types/sinon-chai": "^3.2.5",
    "@types/pg-format": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
